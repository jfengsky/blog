//- main nav

mixin navshow(current)
  header.header
    nav
      h3 枫之舞
      ul
        - if ( current == 'home' )
            li(class='home cur')
              a(href='index.html') 首页
          else
            li(class='home')
              a(href='index.html') 首页

        - if ( current == 'js' )
            li(class='js cur')
              a(href='js/index.html') javascript
          else 
            li(class='js')
              a(href='js/index.html') javascript

        - if ( current == 'css' )
            li(class='css cur')
              a(href='css/index.html') css
          else
            li(class='css')
              a(href='css/index.html') css
